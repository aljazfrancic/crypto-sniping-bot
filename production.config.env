# Production Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control!

# ===============================
# BLOCKCHAIN CONFIGURATION
# ===============================
RPC_URL=https://your-primary-rpc-endpoint.com
BACKUP_RPC_URLS=https://backup1.com,https://backup2.com,https://backup3.com
CHAIN_ID=1
PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE_NEVER_SHARE_THIS

# Contract Addresses (Update for your target network)
ROUTER_ADDRESS=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
FACTORY_ADDRESS=0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f  
WETH_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2

# ===============================
# TRADING CONFIGURATION
# ===============================
BUY_AMOUNT=0.1
SLIPPAGE=5.0
PROFIT_TARGET=50.0
STOP_LOSS=15.0
MIN_LIQUIDITY=5.0
GAS_PRICE_MULTIPLIER=1.2

# ===============================
# RISK MANAGEMENT
# ===============================
MAX_CONCURRENT_TRADES=3
MAX_DAILY_TRADES=20
MAX_POSITION_SIZE=1.0
ENABLE_STOP_LOSS=true
ENABLE_TAKE_PROFIT=true

# ===============================
# SECURITY CONFIGURATION
# ===============================
CHECK_HONEYPOT=true
AUTO_SELL=true
WAIT_FOR_CONFIRMATION=true
ENABLE_MEV_PROTECTION=true
MIN_CONFIRMATION_BLOCKS=1

# ===============================
# PERFORMANCE CONFIGURATION
# ===============================
MAX_RPC_CALLS_PER_SECOND=10
ENABLE_RATE_LIMITING=true
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=10
RETRY_ATTEMPTS=3

# ===============================
# MONITORING & LOGGING
# ===============================
LOG_LEVEL=INFO
ENABLE_MONITORING=true
WEBHOOK_URL=https://your-webhook-endpoint.com/notify
DATABASE_URL=sqlite:///sniper_bot.db

# ===============================
# NOTIFICATION SETTINGS
# ===============================
NOTIFY_ON_BUY=true
NOTIFY_ON_SELL=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_HONEYPOT=true

# ===============================
# ADVANCED SETTINGS
# ===============================
SIMULATION_MODE=false
DRY_RUN=false
ENABLE_BACKTESTING=false
SAVE_TRADE_HISTORY=true
ENABLE_ANALYTICS=true 